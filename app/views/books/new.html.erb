<div class="row information">

  <h1>Add a New Book</h1>

    <%= form_for @book do |f| %>

    <p>
      <%= f.label :title %><br>
      <%= f.text_field :title %>
    </p>

    <p>
      <%= f.label :author %><br>
      <%= f.text_field :author %>
    </p>
    <p>
      <%= f.label :year %><br>
      <%= f.text_field :year %>
    </p>

    <p>
      <%= f.label :description %><br>
      <%= f.text_field :description %>
    </p>

    <p>
      <%= f.label :category %><br>
      <%= f.text_field :category %>
    </p>

      <%= f.submit "Add Book", class: "button" %>

    <% end %>

</div>
